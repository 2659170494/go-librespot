{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/config",
  "definitions": {
    "config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "log_level": {
          "type": "string",
          "enum": [
            "panic",
            "fatal",
            "error",
            "warn",
            "warning",
            "info",
            "debug",
            "trace"
          ],
          "default": "info"
        },
        "device_name": {
          "type": "string",
          "default": "go-librespot"
        },
        "device_type": {
          "type": "string",
          "enum": [
            "computer",
            "tablet",
            "smartphone",
            "speaker",
            "tv",
            "avr",
            "stb",
            "audio_dongle",
            "game_console",
            "cast_video",
            "cast_audio",
            "automobile",
            "smartwatch",
            "chromebook",
            "car_thing",
            "observer",
            "home_thing"
          ],
          "default": "computer"
        },
        "audio_device": {
          "type": "string",
          "default": ""
        },
        "server_port": {
          "type": "integer",
          "default": 0
        },
        "credentials": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "user_pass",
                "spotify_token",
                "zeroconf"
              ],
              "default": "zeroconf"
            },
            "user_pass": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "default": ""
                },
                "password": {
                  "type": "string",
                  "default": ""
                }
              }
            },
            "spotify_token": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "default": ""
                },
                "access_token": {
                  "type": "string",
                  "default": ""
                }
              }
            }
          }
        },
        "bitrate": {
          "type": "number",
          "default": 160
        }
      },
      "required": [
      ],
      "title": "config"
    }
  }
}
